<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  
    <title><%= "#{params[:controller]} | #{params[:action]}" %></title>
    <%= javascript_include_tag 'jquery-1.3.2.min' %>
    <%= javascript_include_tag 'jquery-ui-1.7.2.custom.min' %>
    <%= javascript_include_tag 'jquery.hotkeys' %>
    <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
    <%= stylesheet_link_tag 'admin' %>
    <%= javascript_include_tag 'admin_search.js' %>
    <%= javascript_include_tag 'admin_interface.js' %>
  </head>
  
  <body>
    <div id="wrapper">
      <div id="navigation">
        <div id="main_navigation">
          <%= render :partial => 'admin/menu' if current_user %>
        </div>
        <div id="sub_navigation">
          <%= yield :subnavigation %>
        </div>
      </div>
      <div style="clear: both;"></div>
      <div id="flash">
        <%= flash[:notice] %>
        <% if flash[:error] %>
          <span id="flash_error"><%= flash[:error] %></span>
        <% end %>
      </div>
      <div id="content">
        <%= yield :layout %>
      </div>
      
      <div id="results"></div>
    </div>
    
    <div id="search_widget">
      <div>
        <% form_tag admin_search_path do %>
          <span>Search: </span><%= text_field_tag :search_term %>
        <% end %>
      </div>
      <div id="search_results" style="display: none">
        
      </div>
    </div>
    <%= javascript_include_tag 'tiny_mce/tiny_mce.js' %>
    <script type="text/javascript">
      tinyMCE.init({
        theme: "advanced",
        mode : "specific_textareas",
        editor_selector : "with_editor",
        theme_advanced_toolbar_location : "top",
        theme_advanced_toolbar_align : "left",
        theme_advanced_buttons1 : "bold, italic, underline, bullist, numlist, link, unlink, formatselect, code",
        theme_advanced_buttons2 : "",
        theme_advanced_buttons3 : "",
        extended_valid_elements : "aggregate[tags|limit|order_by|order_direction|partial]",
        relative_urls : false,
        entity_encoding : "raw",
        oninit : "cccms.setup_autosave"
      });
      
    </script>
  </body>
</html>
